@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>许昌学院,欢迎登录</title>
    <link rel="stylesheet" type="text/css" href="~/Content/webbase.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/pages-shoplogin.css" />
</head>
<body>
    <div class="login-box">
        <div class="py-container logoArea">
        </div>
        <div class="loginArea">
            <div class="login ">
                <div class="py-container">

                    <div class="loginform" style="border-radius: 10px">
                        <ul class="sui-nav nav-tabs tab-wraped">
                            <li>
                                <a href="#index" data-toggle="tab">
                                    <h3>扫描登录</h3>
                                </a>
                            </li>
                            <li class="active">
                                <a href="#profile" data-toggle="tab">
                                    <h3>账户登录</h3>
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content tab-wraped">
                            <div id="index" class="tab-pane">
                                <p>二维码登录，暂为官网二维码</p>
                                <img src="~/img/wx_cz.jpg" />
                            </div>
                            <div id="profile" class="tab-pane  active">
                                @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class= "sui-form" }))
                                {
                                    <div class="input-prepend">
                                        <span class="add-on loginname"></span>
                                        @Html.TextBox("account","", new {@class= "span2 input-xfat", placeholder = "学号/邮箱/手机号"})
                                    </div>
                                    <div class="input-prepend">
                                        <span class="add-on loginpwd"></span>
                                        @Html.TextBox("password","",new {@class = "span2 input-xfat", placeholder = "请输入密码" })
                                    </div>
                                    <div class="setting">
                                        <label class="checkbox inline">
                                            <input name="m1" type="checkbox" value="2" checked="">自动登录
                                        </label>
                                        <span class="forget">忘记密码？</span>
                                    </div>
                                    <input type="radio" checked="checked" name="Role" value="0"><label>学生</label>
                                    <input type="radio" name="Role" value="1"><label>教师</label><br />
                                    <input type="submit" value="登录" />
                                }
                                <div class="otherlogin">
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="py-container copyright">
            <ul>
                <li>关于我们</li>
                <li>联系我们</li>
                <li>联系客服</li>
                <li>学校简介</li>
                <li>关于我们</li>
                <li>联系我们</li>
                <li>联系客服</li>
                <li>学校简介</li>
            </ul>
            <div class="address">地址：河南省许昌市魏都区八一路许昌学院 邮编：100096 电话：400-618-4000 传真：010-82935100</div>
            <div class="beian">
                豫ICP备08001421号京公网安备110108007702
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/scripts/jquery.min.js"></script>
    <script type="text/javascript" src="~/scripts/sui.min.js"></script>
    <script type="text/javascript" src="~/scripts/shoplogin.js"></script>
</body>
</html>
